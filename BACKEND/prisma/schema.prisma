generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model FoodComment {
  id        Int      @id @default(autoincrement())
  text      String
  likes     Int      @default(0)
  createdAt DateTime @default(now())
}

model Complaint {
  id          Int      @id @default(autoincrement())
  category    String 
  roomNumber  String
  description String
  status      String   @default("OPEN") 
  createdAt   DateTime @default(now())
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     String 
}
